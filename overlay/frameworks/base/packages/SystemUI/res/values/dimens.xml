<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>
    <!-- the padding on the start of the statusbar -->
    <dimen name="status_bar_padding_start">2dp</dimen>

    <!-- the padding on the end of the statusbar -->
    <dimen name="status_bar_padding_end">4dp</dimen>

    <!-- Padding for the lock icon on the keyguard. In pixels - should not scale with display size. -->
    <dimen name="lock_icon_padding">30px</dimen>

    <!-- Height of the status bar header bar when on Keyguard -->
    <dimen name="status_bar_header_height_keyguard">30dp</dimen>

    <!--  Total minimum padding to enforce to ensure that the dot can always show  -->
    <dimen name="ongoing_appops_dot_min_padding">12dp</dimen>

    <!-- Margin on the left side of the carrier text on Keyguard -->
    <dimen name="keyguard_carrier_text_margin">8dp</dimen>
</resources>
